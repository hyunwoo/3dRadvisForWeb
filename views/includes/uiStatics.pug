.modalWrapper#modalDimensionFieldMaker
    .modal
        .closer.i.material-icons close
        .left
            .title Dimension Field Setting
            .content(page=0).select
                .header Dimension Field Name
                input#DFName
                .header Dimension Field Overview
                textarea#DFOverview
                .header Dimension Group with a High Impact
                .group#DGHighImpact
                .header Dimension Group with a Medium Impact
                .group#DGMediumImpact
                //.header Dimension Group with a none Impact
                //.group#DGNoneImpact
            .content(page=1)
                .header Dimension Field Overview
                .list.axis
                    .title
                        .axis name
                        .value type
                        .value mean
                        .value min
                        .value max
                        .value center
                        .value sigma
                .list.axis#axisListSelector
                    .item
                        .checkbox.checked.i.material-icons check_box
                        .axis background_education_year
                        .value numeric
                        .value 1.3
                        .value 0.53
                        .value 2.5
                        .value 2.0
                        .value 3.2
            .content(page=2)
                #correlationGraph.correlation-bg
            .content(page=3)
                #componentNetwork
                .network#correlationNetwork

        .right
            .content
                .step(for=0).select
                    //.icon.i.material-icons change_history
